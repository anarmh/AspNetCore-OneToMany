@model Project
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="row">
                    <div class="col-md-6">
                        <div class="images p-3">
                            <div class="text-center p-4"> <img id="main-image" src="@Model.Image" width="250" /> </div>
                            <div class="thumbnail text-center"> 
                               
                                <img onclick="change_image(this)" src="@Model.Image" width="70"> 
                      
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="product p-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="home" asp-action="Index">
                                      <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> <span class="ml-1">Back</span> </div> <i class="fa fa-shopping-cart text-muted"></i>
                                </a>
                              
                            </div>
                            <div class="mt-4 mb-3">
                                <span class="text-uppercase text-muted brand">@Model.Title</span>
                                <h5 class="text-uppercase">@Model.Description</h5>
                              
                            </div>
                           
                            
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

